#include <iostream>

using namespace std;

void b(string s)
{
    int d = s.length();
    for (int i=0; i<d; i++)
    {
        if (i%2!=0)
        s[i]='*';
    }
    for (int i=0; i<d; i++)
    {
        if (s[i]=='*')
        {
            for(int j=i; j<d; j++)
            {
                s[j]=s[j+1];
            }
            d--;
        }
    }
    cout<<s;
}

int main()
{
    string w = "ABCDEFGHIJKLMNOP";
    b(w);
}
